{
  "compilerOptions": {
    "target": "ES2022", // Or a later version like ESNext
    "module": "NodeNext", // Or ESNext for more modern Node.js versions
    "moduleResolution": "NodeNext", // Or Bundler for bundler-specific resolution
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // Allow importing JSON files
    "sourceMap": true // Generate source maps for debugging
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
